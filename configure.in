AC_INIT()

for dir in mkf kiklib tool scrollbar contrib/scrollbar contrib/tool ; do 
	mkdir -p ${dir}
done
ln -sf ../kiklib mkf/kiklib

AC_CONFIG_AUX_DIR(autoconf)

AC_ARG_WITH(libtool,
	[  --with-libtool          libtool path [without]])
AC_ARG_ENABLE(debug,
	[  --enable-debug          debug [disabled]])
AC_ARG_ENABLE(fribidi,
	[  --enable-fribidi        use fribidi to enable BiDi [disabled]])
AC_ARG_ENABLE(ind,
	[  --enable-ind            use libind to enable ISCII [disabled]])
AC_ARG_ENABLE(gdk-pixbuf,
        [  --enable-gdk-pixbuf     use gdk-pixbuf for wallpaper [disabled]])
AC_ARG_ENABLE(imlib,
	[  --enable-imlib          use imlib for wallpaper [disabled]])
AC_ARG_ENABLE(anti_alias,
	[  --enable-anti-alias     use Xft to enable anti-alias [disabled]])
AC_ARG_ENABLE(utmp,
	[  --enable-utmp           utmp [disabled]])
AC_ARG_ENABLE(shared,
	[  --disable-shared        shared libraries [enabled]])
AC_ARG_ENABLE(static,
	[  --disable-static        static libraries [enabled]])

AC_CONFIG_SUBDIRS(kiklib/autoconf mkf/autoconf autoconf)

AC_OUTPUT(Makefile)
