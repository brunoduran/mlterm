AC_INIT()

PWD=`pwd`
if test ! -d "mkf/kiklib" ; then
	(cd mkf ; ln -s ../kiklib kiklib)
fi

if test ! -f "install-sh" ; then
	ln -s autoconf/install-sh install-sh
fi

AC_CONFIG_AUX_DIR(${PWD})
cache_file=${PWD}/config.cache

AC_ARG_WITH(libtool,
	[  --with-libtool          libtool path[without]])
AC_ARG_ENABLE(debug,
	[  --enable-debug          debug[disabled]])
AC_ARG_ENABLE(imlib,
	[  --enable-imlib          imlib[disabled]])
AC_ARG_ENABLE(anti_alias,
	[  --enable-anti-alias     anti alias[disabled]])
AC_ARG_ENABLE(ucs4,
	[  --enable-ucs4           ucs4[disabled]])

AC_CONFIG_SUBDIRS(kiklib/autoconf mkf/autoconf autoconf)

AC_OUTPUT()
