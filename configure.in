AC_ARG_ENABLE(utmp,
	[  --enable-utmp           utmp[default=disabled]],
	utmp=$enable_utmp)
if test "$utmp" = "yes" ; then
	UTMP_CFLAGS="-DUSE_UTMP"
	has_utmp=`grep utmp /etc/group 2>/dev/null`
