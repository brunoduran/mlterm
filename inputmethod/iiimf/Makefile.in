top_builddir = ../..
top_srcdir = @top_srcdir@
prefix = @prefix@
exec_prefix = @exec_prefix@
libdir = @libdir@

LIBDIR = $(DESTDIR)$(libdir)/mlterm

VPATH = ${top_srcdir}/inputmethod/iiimf

IM_IIIMF_OBJ = im_iiimf.o im_iiimf_aux.o keymap.o

CFLAGS = $(CFLAGS_LOCAL)		\
	 @KIK_CFLAGS@			\
	 @MKF_CFLAGS@			\
	 @DEB_CFLAGS@			\
	 @X_CFLAGS@			\
	 @TYPE_CFLAGS@			\
	 @CFLAGS@			\
	 @CPPFLAGS@			\
	 @IM_CFLAGS@			\
	 @IIIMCF_CFLAGS@		\
	 -I$(top_srcdir)/mlterm		\
	 -I${top_srcdir}/xwindow	\
	 -I/usr/local/include

LIBS = $(LIBS_LOCAL) @KIK_LIBS_FOR_MODULE@ @MKF_LIBS_FOR_MODULE@ @IIIMCF_LIBS@

CC      = @CC@
INSTALL = @INSTALL@
LIBTOOL = @LIBTOOL@

LIBTOOL_CC      = $(LIBTOOL) --mode=compile $(CC) $(CFLAGS)
LIBTOOL_LINK    = $(LIBTOOL) --mode=link $(CC) @LDFLAGS@
LIBTOOL_INSTALL = $(LIBTOOL) --mode=install $(INSTALL)

.SUFFIXES: .o .c

all: libim-iiimf.la

libim-iiimf.la: $(IM_IIIMF_OBJ)
	$(LIBTOOL_LINK) -o libim-iiimf.la $(IM_IIIMF_OBJ:.o=.lo) \
	-rpath $(libdir)/mlterm \
	-module -avoid-version @NO_UNDEFINED_FLAG@ $(LIBS)

.c.o:
	$(LIBTOOL_CC) -c $<

$(LIBDIR):
	mkdir -p $(LIBDIR)

install: $(LIBDIR)
	$(LIBTOOL_INSTALL) libim-iiimf.la $(LIBDIR)

uninstall:
	rm -f $(LIBDIR)/*im-iiimf.*

clean:
	rm -rf $(IM_IIIMF_OBJ) $(IM_IIIMF_OBJ:.o=.lo) libim-iiimf.la core *.core .libs

distclean: clean
	rm -f Makefile

