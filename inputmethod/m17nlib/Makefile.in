top_builddir = ../..
top_srcdir = @top_srcdir@
prefix = @prefix@
exec_prefix = @exec_prefix@
libdir = @libdir@

DESTDIR =
PREFIX = $(DESTDIR)$(prefix)
LIBDIR = $(DESTDIR)$(libdir)/mlterm

VPATH = ${top_srcdir}/inputmethod/m17nlib

IM_M17NLIB_OBJ = im_m17nlib.o

CFLAGS = $(CFLAGS_LOCAL) 		\
	 @AA_CFLAGS@ 			\
	 @KIK_CFLAGS@			\
	 @MKF_CFLAGS@			\
	 @DND_CFLAGS@			\
	 @X_CFLAGS@			\
	 @CFLAGS@			\
	 @CPPFLAGS@			\
	 @IM_CFLAGS@			\
	 @M17NLIB_CFLAGS@		\
	 -I$(top_srcdir)/mlterm		\
	 -I${top_builddir}/xwindow	\
	 -I/usr/local/include

CC      = @CC@
INSTALL = @INSTALL@
LIBTOOL = @LIBTOOL@

LIBTOOL_CC      = $(LIBTOOL) --mode=compile $(CC) $(CFLAGS)
LIBTOOL_LINK    = $(LIBTOOL) --mode=link $(CC)
LIBTOOL_INSTALL = $(LIBTOOL) --mode=install $(INSTALL)

.SUFFIXES: .o .c

all: im-m17nlib

im-m17nlib: $(IM_M17NLIB_OBJ)
	$(LIBTOOL_LINK) -o libim-m17nlib.la $(IM_M17NLIB_OBJ:.o=.lo) -rpath $(LIBDIR) \
	-module -avoid-version @NO_UNDEFINED_FLAG@ \
	$(LIBS_LOCAL) @KIK_LIBS@ @M17NLIB_LIBS@ \
	@X_LIBS@ @X_PRE_LIBS@ -lX11 @X_EXTRA_LIBS@

.c.o:
	$(LIBTOOL_CC) -c $<

$(LIBDIR):
	mkdir -p $(LIBDIR)

install: $(LIBDIR)
	$(LIBTOOL_INSTALL) libim-m17nlib.la $(LIBDIR)

clean:
	rm -rf $(IM_M17NLIB_OBJ) $(IM_M17NLIB_OBJ:.o=.lo) libim-m17nlib.la *.core .libs

distclean: clean
	rm -f Makefile

