top_builddir = ../..
top_srcdir = @top_srcdir@
prefix = @prefix@
exec_prefix = @exec_prefix@
libdir = @libdir@

LIBDIR = $(DESTDIR)$(libdir)/mlterm

VPATH = ${top_srcdir}/inputmethod/uim

IM_UIM_OBJ = im_uim.o

CFLAGS = $(CFLAGS_LOCAL) 		\
	 @KIK_CFLAGS@			\
	 @MKF_CFLAGS@			\
	 @DEB_CFLAGS@			\
	 @X_CFLAGS@			\
	 @GUI_CFLAGS@			\
	 @CFLAGS@			\
	 @CPPFLAGS@			\
	 @IM_CFLAGS@			\
	 @UIM_CFLAGS@			\
	 -I$(top_srcdir)/mlterm		\
	 -I${top_srcdir}/xwindow	\
	 -I/usr/local/include

LIBS = $(LIBS_LOCAL) @KIK_LIBS_FOR_MODULE@ @MKF_LIBS_FOR_MODULE@ @UIM_LIBS@

TARGET_xlib = libim-uim.la
TARGET_fb = libim-uim-fb.la
TARGET_console = libim-uim-fb.la

TARGET = $(TARGET_@GUI@)

CC      = @CC@
INSTALL = @INSTALL@
LIBTOOL = @LIBTOOL@

LIBTOOL_CC      = $(LIBTOOL) --mode=compile $(CC) $(CFLAGS)
LIBTOOL_LINK    = $(LIBTOOL) --mode=link $(CC) @LDFLAGS@
LIBTOOL_INSTALL = $(LIBTOOL) --mode=install $(INSTALL)

.SUFFIXES: .o .c

all: $(TARGET)

$(TARGET): $(IM_UIM_OBJ)
	$(LIBTOOL_LINK) -o $(TARGET) $(IM_UIM_OBJ:.o=.lo) \
	-rpath $(libdir)/mlterm \
	-module -avoid-version @NO_UNDEFINED_FLAG@ $(LIBS)

.c.o:
	$(LIBTOOL_CC) -c $<

$(LIBDIR):
	mkdir -p $(LIBDIR)

install: $(LIBDIR)
	$(LIBTOOL_INSTALL) $(TARGET) $(LIBDIR)

uninstall:
	rm -f $(LIBDIR)/*im-uim*

clean:
	rm -rf $(IM_UIM_OBJ) $(IM_UIM_OBJ:.o=.lo) *im-uim* *.core .libs

distclean: clean
	rm -f Makefile

