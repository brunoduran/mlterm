top_builddir = ../..
top_srcdir = @top_srcdir@
prefix = @prefix@
exec_prefix = @exec_prefix@
libdir = @libdir@

DESTDIR =
PREFIX = $(DESTDIR)$(prefix)
LIBDIR = $(DESTDIR)$(libdir)/mlterm

VPATH = ${top_srcdir}/inputmethod/uim

IM_UIM_OBJ = im_uim.o

CFLAGS = $(CFLAGS_LOCAL) 		\
	 @AA_CFLAGS@ 			\
	 @KIK_CFLAGS@			\
	 @MKF_CFLAGS@			\
	 @DND_CFLAGS@			\
	 @X_CFLAGS@			\
	 @CFLAGS@			\
	 @CPPFLAGS@			\
	 @UIM_CFLAGS@			\
	 -I$(top_srcdir)/mlterm		\
	 -I${top_builddir}/xwindow	\
	 -I/usr/local/include

CC      = @CC@
INSTALL = @INSTALL@
LIBTOOL = @LIBTOOL@

LIBTOOL_CC      = $(LIBTOOL) --mode=compile $(CC) $(CFLAGS)
LIBTOOL_LINK    = $(LIBTOOL) --mode=link $(CC)
LIBTOOL_INSTALL = $(LIBTOOL) --mode=install $(INSTALL)

.SUFFIXES: .o .c

all: im-uim

im-uim: $(IM_UIM_OBJ)
	$(LIBTOOL_LINK) -o libim-uim.la $(IM_UIM_OBJ:.o=.lo) -rpath $(LIBDIR) \
	-module -avoid-version @NO_UNDEFINED_FLAG@ \
	$(LIBS_LOCAL) @KIK_LIBS@ @UIM_LIBS@

.c.o:
	$(LIBTOOL_CC) -c $<

$(LIBDIR):
	mkdir -p $(LIBDIR)

install: $(LIBDIR)
	$(LIBTOOL_INSTALL) libim-uim.la $(LIBDIR)

clean:
	rm -rf $(IM_UIM_OBJ) $(IM_UIM_OBJ:.o=.lo) libim-uim.la *.core .libs

distclean: clean
	rm -f Makefile

