BUILD_TOPDIR = ../..

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@

SRC_TOPDIR = @SRC_TOPDIR@

VPATH = ${SRC_TOPDIR}/tool/mlclient

CC = @CC@
CFLAGS = @KIK_CFLAGS@ @CFLAGS@
LIBS = @SOCK_LIBS@
INSTALL = @INSTALL@

BINDIR = $(DESTDIR)$(bindir)

OBJ = main.o

PROG = mlclient

all: $(PROG)

$(PROG): $(OBJ)
	$(CC) -o $(PROG) $(OBJ) $(LIBS)

.SUFFIXES: .c.o

.c.o:
	$(CC) $(CFLAGS) -c $<

clean:
	rm -f $(OBJ) $(PROG) $(PROG).core

install:
	$(INSTALL) -m 755 $(PROG) $(BINDIR)
