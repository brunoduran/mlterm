top_builddir = ../../..
top_srcdir = @top_srcdir@
prefix = @prefix@
exec_prefix = @exec_prefix@
libexecdir = @libexecdir@
sysconfdir = @sysconfdir@
datadir = @datadir@

VPATH = ${top_srcdir}/tool/mlmenu

CC = @CC@
LIBTOOL = @LIBTOOL@
INSTALL = @INSTALL@

DESTDIR =
LIBEXECDIR = $(DESTDIR)$(libexecdir)
SYSCONFDIR = $(DESTDIR)$(sysconfdir)/mlterm

LKIK = @KIK_LIBS@

CFLAGS = $(CFLAGS_LOCAL) @CFLAGS@ @CPPFLAGS@ -DSYSCONFDIR=\"$(SYSCONFDIR)\"
LIBS = $(LIBS_LOCAL) $(LKIK)

LIBTOOL_LINK = $(LIBTOOL) --mode=link $(CC)
LIBTOOL_INSTALL = $(LIBTOOL) --mode=install $(INSTALL)

PACKAGE = @PACKAGE@
VERSION = @VERSION@

OBJS = main.o

all: mlmenu

mlmenu: $(OBJS)
	$(LIBTOOL_LINK) $(OBJS) $(CFLAGS) -o mlmenu $(LIBS)

.c.o:
	$(CC) $(DEFS) $(CFLAGS) -c $<

install: $(LIBEXECDIR)
	$(LIBTOOL_INSTALL) -m 755 mlmenu $(LIBEXECDIR)
	$(INSTALL) -m 644 ${top_srcdir}/tool/mlmenu/menu $(SYSCONFDIR)

$(LIBEXECDIR):
	mkdir -p $(LIBEXECDIR)

clean:
	rm -rf $(OBJS) mlmenu mlmenu.exe *.core .libs

distclean: clean
	rm -f Makefile
